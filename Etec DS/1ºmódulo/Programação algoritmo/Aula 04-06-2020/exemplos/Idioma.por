		escolha(pais){
			caso 1: escreva("Japonês")
			pare
			caso 2 : escreva("Nerlandês, Papiamento e Lingua Frísia")
			pare
			caso 3 : escreva("Inglês")
			pare
			caso 4: escreva("Português")
			pare
			caso 5 : escreva("Português")
			pare
			caso 6 : escreva("Lituano")
			pare
			caso 7 : escreva("Azeri e Armênio")
			pare
			caso 8 : escreva(" Africaner, Inglês, mdebele, zulu, twsana, soto do norte...")
			pare
			caso contrario: escreva(" Escolha um pais válido")
			pare
		}
	}
}
