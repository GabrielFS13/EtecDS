programa
{
	
	funcao inicio()
	{
		inteiro pais
		escreva("Escolha um pais:\n(1) Japão\t(5) Portugal\n(2) Holanda\t(6) lituania\n(3)Australia\t(7)Azerbaijão\n(4) Brasil\t (8) Africa do sul\n\n")
